<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal|center_vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|center_horizontal|center_vertical" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_horizontal">

                <Spinner
                    android:id="@+id/spinner11"
                    android:layout_width="100dp"
                    android:layout_height="80dp" />

                <Spinner
                    android:id="@+id/spinner12"
                    android:layout_width="100dp"
                    android:layout_height="80dp" />

                <Spinner
                    android:id="@+id/spinner13"
                    android:layout_width="60dp"
                    android:layout_height="80dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Spinner
                    android:id="@+id/spinner21"
                    android:layout_width="100dp"
                    android:layout_height="80dp" />

                <Spinner
                    android:id="@+id/spinner22"
                    android:layout_width="100dp"
                    android:layout_height="80dp" />

                <Spinner
                    android:id="@+id/spinner23"
                    android:layout_width="60dp"
                    android:layout_height="80dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Spinner
                    android:id="@+id/spinner31"
                    android:layout_width="100dp"
                    android:layout_height="80dp" />

                <Spinner
                    android:id="@+id/spinner32"
                    android:layout_width="100dp"
                    android:layout_height="80dp" />

                <Spinner
                    android:id="@+id/spinner33"
                    android:layout_width="100dp"
                    android:layout_height="80dp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>